<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>BloodDor</display-name>
  
  <servlet>
  	<servlet-name>Welcome</servlet-name>
  	<servlet-class>com.ravi.WelcomeServlet</servlet-class>
  </servlet>
   <servlet-mapping>
  		<servlet-name>Welcome</servlet-name>
  		<url-pattern>/ravi-services/*</url-pattern>  		
  </servlet-mapping>
  
  
  <servlet>
  	<servlet-name>BloodServices</servlet-name>
  	<servlet-class>com.ravi.BloodDorServices</servlet-class>
  </servlet>
   <servlet-mapping>
  		<servlet-name>BloodServices</servlet-name>
  		<url-pattern>/blood-services/*</url-pattern>  		
  </servlet-mapping>
  
 
  <welcome-file-list>
    <welcome-file>welcome.html</welcome-file>
    </welcome-file-list>
</web-app>